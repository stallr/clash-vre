{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "tauri": {
    "systemTray": {
      "iconPath": "icons/tray-icon-mono.ico",
      "iconAsTemplate": true
    },
    "bundle": {
      "identifier": "us.un.clashrev",
      "targets": ["app", "dmg"],
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.15",
        "exceptionDomain": "",
        "signingIdentity": "-",
        "entitlements": null
      },
      "dmg": {
        "background": "images/background.png",
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        },
        "windowPosition": {
          "x": 200,
          "y": 180
        }
      }
    }
  }
}
